{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "max-len": [1, 120, 2, {
            "ignoreComments": true
        }],
        "react/jsx-filename-extension": [0],
        "react/prefer-stateless-function": "warn",
        "import/prefer-default-export": "off",
        "arrow-parens": "off",
        "react/jsx-fragments": 0,
        "react/prop-types": 0,
        "comma-dangle": "off"
    }
}
